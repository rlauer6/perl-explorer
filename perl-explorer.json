{
  "home" : "/openbedrock",
  "path" : "~/lib",
  "pod" : {
    "css" : "perl-explorer-pod.css",
    "author" : "Rob Lauer - <rlauer6@comcast.net>"
  },
  "critic" : {
    "profile" : "~/.perlcriticrc",
    "severity" : 1,
    "theme" : "pbp",
    "verbose" : 11,
    "js" : [
      "//code.jquery.com/jquery-3.7.1.min.js",
      "//cdn.datatables.net/2.0.1/js/dataTables.min.js",
      "perl-explorer-critic.js",
      "perl-explorer-common.js"
      ],
    "css" : [
      "perl-explorer-common.css",
      "perl-explorer-critic.css",
      "perl-explorer-source.css",
      "//cdn.datatables.net/2.0.1/css/dataTables.dataTables.min.css"
    ]
  },
  "tidy" : {
    "profile" : "~/.perltidyrc"
  },
  "templates" : {
    "index" : "~/perl-explorer.html"
  },
  "site" : {
    "css" : "/static/css",
    "js" : "/static/js",
    "html": "/",
    "logo" : "/static/img/swervepay-front-logo-01.png"
  },
  "index" : {
    "css"      : ["perl-explorer.css",
                  "perl-explorer-common.css"
                 ],
    "js"       : [
      "jquery-3.6.0.min.js",
      "perl-explorer.js",
      "perl-explorer-common.js"
    ]
  },
  "source" : {
    "line_numbers": 1,
    "css" : [
      "perl-explorer-source.css",
      "perl-explorer-common.css"
    ],
    "js" : [
      "jquery-3.6.0.min.js",
      "perl-explorer-source.js",
      "perl-explorer-common.js"
    ]
  }
}
